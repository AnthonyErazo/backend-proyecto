<main>
  <div class="loginContainer">
    <h3>LOG IN</h3>
    <form action="/api/sessions/login" method="post">
      <div class="formContainer">
        <label for="email">Username (email)</label>
        <input type="email" id="email" placeholder="Enter Username" name="email" required>

        <label for="password">Password</label>
        <input type="password" id="password" placeholder="Enter Password" name="password" required>

        <button type="submit">Login</button>
      </div>
    </form>
    <p class="" id="answer">{{answer}}</p>
    <br>
    <a href="/api/sessions/github" class="btn btn-dark">github</a>
    <br>
    <a class="link" href="/register">Registrarse</a>
  </div>
</main>

<script src="/js/login.js"></script>